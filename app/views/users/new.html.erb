<div class="back">
  <div class="text-center">
    <div class="container-fluid">
    <h1><%= image_tag "logo.jpg", style: "height: 85px" %><br>Cow Group</h1>
    <p width=40px font-size=10px>회원가입! </p>
    </div>
    
    <%= form_tag("/users/join_process", method: "post") do %>
      <div class="row">
      <div class="col-sm-offset-2 col-sm-8 form-group">
        <%= text_field_tag "username", nil, class: "form-control log", placeholder: "이름을 입력해주세요" %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-offset-2 col-sm-8 form-group">
        <%= password_field_tag "password", nil, class: "form-control log", placeholder: "비밀번호를 입력해주세요" %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-sm-offset-4 col-sm-4 form-group">
        <%= submit_tag "REGISTER", class: "form-control btn btn-lg log" %>
      </div>
    </div>
    <% end %>
</div>
                  
                     
