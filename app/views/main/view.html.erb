<header id="header">
	<div class="inner">
		<a href="#" class="image avatar"><img src="/assets/logo.jpg" alt="" /></a>
		<h1><strong><%= @list.gp_name %></strong></h1>
		<p style="font-size: small;"><strong><%= @list.creater %></strong></p><hr>
		<form action="/main/membercreate/<%= @list.id %>" method="post">
		    <input type="hidden" name="name" value=<%=@user.username%>>
		    <input class="button" type="submit" value="소그룹 가입하기">
		</form>
		<a href="/main/mypage" class="button">돌아가기</a>
	</div>
</header>
<div id="main">
    <section>
        <h2>소모임 소개</h2>
        <div style="border: 2px solid #ccc; border-radius: 4px; height: 50vh; margin-top: 1em; padding: 1em"><%= @list.content %></div>
        <div style="height: 5vh; margin-top: 1em;">
            <center>이 소모임에 속한 회원 : <% @member.each do |m| %><%= m.name %> <% end %></center>
        </div>
    </section>
	<section>
	    <div style="overflow:hidden;">
	        <h2 style="float:left;">소그룹 게시판</h2>
	        <a href="/main/list/<%= @list.id %>" class="button" style="float:right; font-size:13px;">게시글쓰기</a>
	    </div>
        <div class="table-wrapper" style="margin-top: 1em;">
                        <table>
                           <tbody>
                              <tr>
								<td width="10%">번호</td>
                                <td width="70%">제목</td> <!-- 여기에 제목 입력 -->
                                <td width="20%">작성자</td>
                              </tr>
                              <% @post.each do |p| %>
                              <tr>
                                 <td width="10%"><%= p.id %></td>
                              	 <td width="70%"><a href="/main/showpost/<%= p.id %>"><%= p.title %></a></td>
                              	 <td width="20%"><%= p.name %></td>
                              </tr>
                              <% end %>
                           
                           </tbody>
                           <tfoot>
                           </tfoot>
                        </table>
        </div>
         
    </section>

</div>

