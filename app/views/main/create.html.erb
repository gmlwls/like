<div class="back">
    <div class="container-fluid text-center">
        <%= image_tag "logo.jpg", style: "height: 85px" %>
        <h1>Cow Group</h1>
        <p>소그룹을 생성해주세요! </p>
    </div>
    
    <%=form_tag("/main/save", method: "post") do %>
    <div class="row">
        <div class="col-sm-6 form-group">
            <div class="row">
                <%= text_field_tag "gp_name", nil, class: "form-control make", placeholder: "소그룹 이름" %>
            </div>
            <div class="row">
                <%= text_field_tag "creater", @user.username, class: "from-control make" %>
            </div>
            <div class="row text-center">
              <%= radio_button_tag "category", "study", id: "study", class: "form-control" %><label for="study">스터디</label>
            <!--<input class="form-control" type="radio" name="category" value="study" id="male"><label for="male">스터디</label>-->
              <%= radio_button_tag "category", "talent", id: "talent", class: "form-control" %><label for="talent">재능기부</label>
            <!--<input class="form-control" type="radio" name="category" value="talent" id="female"><label for="female">재능기부</label>-->
            </div>
        </div>
        <div class="col-sm-6 form-group">
          <%= text_area_tag "content", nil, class: "form-control", placeholder: "소그룹을 설명해주세요.", rows: "8" %>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-offset-4 col-sm-4 form-group">
          <%= submit_tag "생성", class: "btn btn-lg log" %>
        </div>
    </div>
    <% end %>
</div>